<header class="mb-4">
  <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color: #006633;">
    <div class="container-fluid">
      <%= link_to 'GuitarProud', root_url, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <% if logged_in? %>
            <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %>
            </a>
              <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLinks">
                <li class="dropdown-item">
                  <%= link_to '自分の投稿', user_path(current_user) %>
                </li>
                <li class="dropdown-item">
                  <%= link_to 'プロフィール', edit_user_path(current_user) %>
                </li>
                <li class="dropdown-item">
                  <%= link_to 'アカウント削除', user_path(current_user), method: :delete, data: { confirm: "you sure?" } %>
                <li>
              </ul>
            <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
              マッチング
            </a>
              <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLinks">
                <li class="dropdown-item">
                  <%= link_to '全てのユーザー', users_path %>
                </li>
                <li class="dropdown-item">
                  <%= link_to 'あなたに興味を持っているユーザー', followers_users_path %>
                </li>
                <li class="dropdown-item">
                  <%= link_to 'マッチングしたユーザー', matches_users_path %>
                </li>
              </ul>
            </li>
            <li class="nav-item">
              <%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'アカウント作成', signup_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログイン', login_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>

<footer class="mb-4">
<nav class="navbar navbar-expand-lg fixed-bottom navbar-light bg-light">
  <div class="container-fluid">
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to '新しい投稿', newpost_path, class: 'nav-link' %>
      </li>
    </ul>
  </div>
</nav>
</footer>