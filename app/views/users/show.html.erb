<h1><%= @user.name %> の投稿</h1>
<h2 class="header">バンド一覧</h2>
<% if current_user.id == @user.id %>
  <%= link_to '新しい投稿', newpost_path, class: 'ui primary button' %>
<% end %>
<%= render 'relationships/follow_button', user: @user %>
<% unless @user.id == current_user.id %>
  <% if current_user.new_follow(@user) && @user.new_follow(current_user) %>
    <% if @exist_room == true %>
      <%= link_to 'DM', room_path(@roomId), class: 'circular ui mini blue button' %>
    </i>
    <% else %>
      <%= form_with(model: @room, local: true) do |f| %>
        <%= fields_for @entry do |e| %>
          <%= e.hidden_field :user_id, value: @user.id %>
        <% end %>
        <%= f.submit 'DM', class: 'circular ui mini blue button' %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
<%= render 'posts/post', posts: @posts %>