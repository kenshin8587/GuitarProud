<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  <div class="row mb-2">
    <div class="col-md-3">
      <%= f.label :email, 'メールアドレス' %>
    </div>
    <div class="col-md-6">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="offset-md-3"></div>
  </div>
    
  <div class="row mb-5">
    <div class="col-md-3">
      <%= f.label :password, 'パスワード' %>
    </div>
    <div class="col-md-6">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="offset-md-3"></div>
  </div>
  
  <div class="row">
    <div class="col-md-6">
      <%= f.submit 'ログインする', class: 'btn btn-success mt-5' %>
    </div>
    <div class="offset-md-6"></div>
  </div>
<% end %>

<p class="mt-4"><%= link_to 'アカウントを持っていない場合はこちら', signup_path %></p>
