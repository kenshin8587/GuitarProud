<h3 class="ui medium header">コメント</h3>
<div class="ui reply form">
  <%= form_with(model: @comment, local: true) do |f| %>
    <%= hidden_field_tag :post_id, @post.id %>
    <div class="six wide field">
      <%= f.text_area :content %>
    </div>
    
    
    <%= f.submit 'コメントする', class: 'ui primary button' %>
  
  <% end %>
</div>